<header class="page-header">
  <h1><%= title %></h1>
  <% if (typeof hideAddNote === 'undefined') { %>
    <a href="/notes/add" class="btn btn-primary">ADD Note</a>
  <% } %>
  <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs) { %>
    <ol class="breadcrumb">
    <%
    for (var crumb of breadcrumbs) {
      if (crumb.active) {
      %><li class="breadcrumb-item active"><%= crumb.text %></li><%
      } else {
      %><li class="breadcrumb-item"><a href="<%= crumb.href %>"><%= crumb.text %></a></li><%
      }
    }
    %>
</ol>
<% } %>
</header>